@using System.Globalization
@using ZipishLens.Signature.Resource
<ul>
    <li>Issuer: @(Certificate.CertInfo.Issuer)</li>
    <li>
        Validity
        <ul>
            <li>Not Before: @FormatDateTime(Certificate.CertInfo.Validity.NotBefore)</li>
            <li>Not After: @FormatDateTime(Certificate.CertInfo.Validity.NotAfter)</li>
        </ul>
    </li>
    <li>Subject: @(Certificate.CertInfo.Subject)</li>
</ul>

@code {
    [Parameter] public required Certificate Certificate { get; set; }

    private static string FormatDateTime(DateTime dateTime) => dateTime.ToString("MMM dd HH:mm:ss yyyy 'GMT'", CultureInfo.InvariantCulture);
}
